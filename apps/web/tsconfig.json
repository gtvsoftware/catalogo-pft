{
  "extends": "@terraviva/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "contentlayer/generated": ["./.contentlayer/generated"]
    },
    "strict": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.js", "../express/src/typesense/typesense.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}